<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.item-panel{
		background-color:#111;
		margin: 30px 30px;
		}
		.title{
		color:#fff;
		font-size: 25px;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.item-panel}" ui:field="pnMain"
		horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
		<g:Image ui:field="imgMain"></g:Image>
		<g:Label ui:field="lbTitle" styleName="{style.title}"></g:Label>
	</g:VerticalPanel>
</ui:UiBinder> 