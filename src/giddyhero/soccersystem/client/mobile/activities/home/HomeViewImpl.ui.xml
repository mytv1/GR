<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.googlecode.mgwt.ui.client.widget.button">
	<ui:style>
		.home-panel{
		background-color:#fff;
		}
		.footer-panel{
		background-color: #73706C;
		}
	</ui:style>

	<g:FlowPanel ui:field="homePanel" styleName="{style.home-panel}"
		height="100%" width="100%">
		<g:VerticalPanel width="100%" height="95%" visible="true"
			horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<b:Button ui:field="btNews" width="90%" text="News" confirm="true"></b:Button>
			<b:Button ui:field="btLeague" width="90%" text="League"
				confirm="true"></b:Button>
			<b:Button ui:field="btTeam" width="90%" text="Team" confirm="true"></b:Button>
			<b:Button ui:field="btPlayer" width="90%" text="Player"
				confirm="true"></b:Button>
			<b:Button ui:field="btAccount" width="90%" text="Account"
				confirm="true"></b:Button>
			<b:Button ui:field="btGame" width="90%" text="Game" confirm="true"></b:Button>
			<b:Button ui:field="btStore" width="90%" text="Store"
				confirm="true"></b:Button>
		</g:VerticalPanel>
		<g:HorizontalPanel styleName="{style.footer-panel}"
				ui:field="footerPanel" width="100%" height="5%"
				horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:Label> Graduate Reseach - Mytv</g:Label>
			</g:HorizontalPanel>
	</g:FlowPanel>
</ui:UiBinder> 